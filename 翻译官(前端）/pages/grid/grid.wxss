.page__hd{
  margin: 36rpx 0 10rpx 48rpx;
  font-size: 36rpx;
}
.weui-grids {
  margin: 10rpx 60rpx; 
  /* border: 1rpx solid #d9d9d9; */
  /* border-left: 1rpx solid #d9d9d9; */
  overflow: hidden;
  justify-content: space-around;

}

.weui-grid {

  position: relative;
  float: left;
  text-align: center;
  height: 200rpx;
  width: 200rpx;
  padding:20px 10px;
  margin: 5rpx 5rpx;
   /* width: 33.33333333%;  */
  box-sizing: border-box;
   border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9; 
  border-radius: 15rpx;
  background-color: #87cefa;
}

.weui-grid-selected {

  position: relative;
  float: left;
  text-align: center;
  height: 200rpx;
  width: 200rpx;
  padding: 20px 10px;
  margin: 5rpx 5rpx;
   /* width: 33.33333333%;  */
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fdeaa6;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 20px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

}

.icon {
  float: left;
  margin-top: -10rpx;
}
