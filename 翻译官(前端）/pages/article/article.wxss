.weui-article {
    padding: 20px 15px;
    font-size: 15px;
}
.weui-article__section {
    margin-bottom: 1.5em;
    text-indent: 2rem;
}
.weui-article__title{
  margin-bottom: 30rpx;
}
.weui-article__h1 {
    font-size: 20pt;
    font-weight:400;
    margin-bottom: .9em;
}
.weui-article__h2 {
    font-size: 16px;
    font-weight:400;
    margin-bottom: .34em;
}
.weui-article__h3 {
    font-weight:400;
    font-size: 15px;
    margin-bottom: .34em;
}
.weui-article__p {
  font-size: 36rpx;
    margin: 0 0 .8em;
}
.detail{
  text-align: center;
  /* float: right; */
  color: #888;
  font-family: 'Times New Roman', Times, serif;
}
.weui-article__img{
  display: flex;
  justify-content: center;
}
.translate{
  margin: auto;
  color: #1e90ff; 
  text-decoration: underline;
  text-align: center;
  font-size: 25rpx;
  margin-bottom: 50rpx;
}