/* 翻译框 */

.translate-box {
  width: auto;
  height: 500rpx;
}

.translate-switch {
  justify-content: space-around;
  display: flex;
  height: 80rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #8a8a8a;
}

.language-left {
  width: 200rpx;
  height: 60rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
  text-align: center;
  /* border: 1rpx solid #888; */
  border-radius: 5%;
}

.language-btn {
  color: #0778e4;
  font-size: 30rpx;
  display: inline-block;
  margin: 0 auto;
}

.arrow-down {
  display: inline;
  border-width: 4px;
  border-color: #777 transparent transparent;
  border-style: dotted;  
  margin: 20rpx;
}
.language-right {
  display: inline-block;
  text-align: center;
  width: 200rpx;
  height: 60rpx;
  margin-top: 15rpx;
  /* border: 1rpx solid #888; */
  border-radius: 5%;
}

.change {
  /* display: inline-block; */
  width: 35rpx;
  height: 35rpx;
  padding-right: 20rpx;
  margin-top: 35rpx;
  /* border: 1rpx solid #888; */
}

.translate-area {
  position: absolute;
  width: 95%;
  height: 290rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.tip {
  color: #888;
  float: left;
  padding-left: 0.8rem;
}

